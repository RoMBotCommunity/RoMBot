	<preCodeOnElite><![CDATA[
		player:cast("MAGE_ELEMENTAL_CATALYST")		yrest(1000)
		player:cast("MAGE_ENERGY_WELL") 					yrest(1000)
		return MyPreCodeOnElite and MyPreCodeOnElite() or true
	]]></preCodeOnElite>

	<onPreSkillCast><![CDATA[
		local remaining
		
		if not player:hasBuff (501962) then 
			player:queueSkill ('MAGE_ESSENCE_OF_MAGIC')
		end
		
		if not player:hasBuff (500296) then
			player:queueSkill ('MAGE_ENERGY_INFLUX')
		end

		if not player:hasBuff (620209) then
			player:queueSkill ("MAGE_ELECTROSTATIC_CHARGE")
		end
		
		if arg1.Name=='MAGE_FLAME' then
			player:queueSkill ("MAGE_FIREBALL")
		end
		
		return true
	]]></onPreSkillCast>

	<onLeaveCombat><![CDATA[
		--player:flushSkillQueue ()
	]]></onLeaveCombat>
	
	<onSkillCast><![CDATA[
	
		player:checkPotions()
		
		local HP			= player.HP/player.MaxHP*100
		
		if HP < 25 then
			player:queueSkill("PRIEST_HOLY_AURA")
			player:queueSkill("PRIEST_REGENERATE")
			player:queueSkill("PRIEST_URGENT_HEAL")
			player:queueSkill("PRIEST_URGENT_HEAL")
			player:queueSkill("PRIEST_URGENT_HEAL")
		elseif HP < 50 then
			player:queueSkill("PRIEST_URGENT_HEAL")
		elseif HP < 75 and not player:hasBuff (500469) then
			player:queueSkill ("PRIEST_REGENERATE")
		end
		
		return true
	]]></onSkillCast>

