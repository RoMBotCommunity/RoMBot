		<skill name="SCOUT_COMBO_SHOT"       	hotkey="MACRO" priority="95" />
		<skill name="SCOUT_ARROW_OF_ESSENCE"	hotkey="MACRO" priority="90" maxhpper="60" inbattle="true"/>
		<skill name="SCOUT_WIND_ARROWS"   		hotkey="MACRO" priority="80" />
